<div class="text-center container-fluid">
    <h1 class="h3 mb-3 font-weight-normal">Upload your file!</h1>
    <div class="row text-center">
      <form id="uploadForm" action="/files" method="post" class="form-upload form-horizontal col-10" accept-charset="UTF-8" autocomplete="off">
        <div class="form-group">
        <div class="row">
          <span class="col-md-2">File</span>
            <div class="col-md-10 input-group">
              <div class="input-group-prepend">
                <span class="input-group-text" id="basic-addon1">Max 25MB</span>
              </div>
              <span class="input-group-btn">
                <span class="btn btn-primary btn-file">
                  <input type="file" name="file">
                </span>
              </span>
            </div>
        </div>
        <div class="row">
          <label class="col-md-2 control-label align-middle">File Name</label>
          <input type="text" name="name" class="form-control col-md-10" placeholder="File Name" required>
        </div>
        <div class="row">
          <label class="col-2">Description</label>
          <textarea name="description" class="form-control col-10" placeholder="Description" row="4"></textarea>
        </div>
        <div class="row">
          <label class="col-2">Number of Parts</label>
          <input type="number" name="totalShares" class="form-control col-10" value="5" required>
        </div>
        <div class="row">
          <label class="col-2">Parts Required</label>
          <input type="number" name="minimumShares" class="form-control col-10" value="3" required>
        </div>
        <button class="btn btn-lg btn-primary btn-block" type="submit">Upload</button>
      </form>
    </div>
</div>